<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.AddUpdateShelfDetails"
    android:background="@color/royal_blue">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/_100sdp"
        android:background="@drawable/top_rounded_white_bg">

        <androidx.appcompat.widget.LinearLayoutCompat
            android:id="@+id/scanCont"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_20sdp"
            android:layout_marginTop="@dimen/_30sdp"
            android:layout_marginEnd="@dimen/_20sdp"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tvHeader"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:fontFamily="@font/amiko"
                    android:text="Carton"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_20ssp"
                    android:visibility="visible" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_20sdp"
                android:orientation="vertical"
                android:weightSum="4">

                <TextView
                    android:id="@+id/whTV"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_10sdp"
                    android:background="@color/royal_blue"
                    android:fontFamily="@font/amiko"
                    android:paddingStart="@dimen/_10sdp"
                    android:paddingTop="@dimen/_10sdp"
                    android:paddingEnd="@dimen/_10sdp"
                    android:paddingBottom="@dimen/_10sdp"
                    android:text="Business location"
                    android:textColor="@color/white"
                    android:textStyle="bold" />

                <LinearLayout
                    android:id="@+id/treeView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/whTV"
                    android:orientation="vertical">

                    <View
                        android:layout_width="@dimen/_2sdp"
                        android:layout_height="@dimen/_40sdp"
                        android:layout_marginStart="@dimen/_50sdp"
                        android:background="@color/black" />

                    <View
                        android:layout_width="@dimen/_50sdp"
                        android:layout_height="@dimen/_2sdp"
                        android:layout_marginStart="@dimen/_50sdp"
                        android:background="@color/black" />

                    <View
                        android:layout_width="@dimen/_2sdp"
                        android:layout_height="@dimen/_40sdp"
                        android:layout_marginStart="@dimen/_50sdp"
                        android:background="@color/black" />

                    <View
                        android:layout_width="@dimen/_50sdp"
                        android:layout_height="@dimen/_2sdp"
                        android:layout_marginStart="@dimen/_50sdp"
                        android:background="@color/black" />

                    <View
                        android:layout_width="@dimen/_2sdp"
                        android:layout_height="@dimen/_40sdp"
                        android:layout_marginStart="@dimen/_50sdp"
                        android:background="@color/black" />

                    <View
                        android:layout_width="@dimen/_50sdp"
                        android:layout_height="@dimen/_2sdp"
                        android:layout_marginStart="@dimen/_50sdp"
                        android:background="@color/black" />

                    <View
                        android:layout_width="@dimen/_2sdp"
                        android:layout_height="@dimen/_40sdp"
                        android:layout_marginStart="@dimen/_50sdp"
                        android:background="@color/black" />

                    <View
                        android:layout_width="@dimen/_50sdp"
                        android:layout_height="@dimen/_2sdp"
                        android:layout_marginStart="@dimen/_50sdp"
                        android:background="@color/black" />

                </LinearLayout>

                <TextView
                    android:id="@+id/warehouseTV"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_60sdp"
                    android:layout_toEndOf="@+id/treeView"
                    android:background="@color/royal_blue"
                    android:fontFamily="@font/amiko"
                    android:paddingStart="@dimen/_10sdp"
                    android:paddingTop="@dimen/_10sdp"
                    android:paddingEnd="@dimen/_10sdp"
                    android:paddingBottom="@dimen/_10sdp"
                    android:text="Warehouse"
                    android:textColor="@color/white"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/rackTV"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/warehouseTV"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:layout_toEndOf="@+id/treeView"
                    android:background="@color/royal_blue"
                    android:fontFamily="@font/amiko"
                    android:paddingStart="@dimen/_10sdp"
                    android:paddingTop="@dimen/_10sdp"
                    android:paddingEnd="@dimen/_10sdp"
                    android:paddingBottom="@dimen/_10sdp"
                    android:text="Rack"
                    android:textColor="@color/white"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/shelfTV"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/rackTV"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:layout_toEndOf="@+id/treeView"
                    android:background="@color/royal_blue"
                    android:fontFamily="@font/amiko"
                    android:paddingStart="@dimen/_10sdp"
                    android:paddingTop="@dimen/_10sdp"
                    android:paddingEnd="@dimen/_10sdp"
                    android:paddingBottom="@dimen/_10sdp"
                    android:text="Shelf "
                    android:textColor="@color/white"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/palletTV"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/shelfTV"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:layout_toEndOf="@+id/treeView"
                    android:background="@color/royal_blue"
                    android:fontFamily="@font/amiko"
                    android:paddingStart="@dimen/_10sdp"
                    android:paddingTop="@dimen/_10sdp"
                    android:paddingEnd="@dimen/_10sdp"
                    android:paddingBottom="@dimen/_10sdp"
                    android:text="Pallet"
                    android:textColor="@color/white"
                    android:textStyle="bold" />

            </RelativeLayout>

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/scanBtn"
                android:layout_width="@dimen/_250sdp"
                android:layout_height="@dimen/_250sdp"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/_50sdp"
                android:background="@drawable/grey_stroke_white_rounded_bg"
                android:src="@drawable/qr_code"
                android:tint="@color/dark_grey"
                android:visibility="visible" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/scanCartonTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/_15sdp"
                android:fontFamily="@font/amiko"
                android:text="Scan carton code"
                android:textColor="@color/black"
                android:textSize="@dimen/_20ssp"
                android:visibility="visible" />

            <RelativeLayout
                android:id="@+id/surfaceCont"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone">

                <SurfaceView
                    android:id="@+id/cameraSurfaceView"
                    android:layout_width="@dimen/_350sdp"
                    android:layout_height="@dimen/_300sdp"
                    android:layout_gravity="center"
                    android:layout_marginStart="@dimen/_20sdp"
                    android:layout_marginTop="@dimen/_20sdp"
                    android:layout_marginEnd="@dimen/_20sdp"
                    android:layout_marginBottom="@dimen/_50sdp"
                    android:visibility="visible"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/closeIV"
                    android:layout_width="@dimen/_30sdp"
                    android:layout_height="@dimen/_30sdp"
                    android:layout_alignParentEnd="true"
                    android:layout_marginTop="@dimen/_40sdp"
                    android:layout_marginEnd="@dimen/_40sdp"
                    android:background="@drawable/grey_rounded_bg"
                    android:padding="@dimen/_5sdp"
                    android:src="@drawable/close_icon"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

            </RelativeLayout>

        </androidx.appcompat.widget.LinearLayoutCompat>

    </androidx.core.widget.NestedScrollView>

</RelativeLayout>